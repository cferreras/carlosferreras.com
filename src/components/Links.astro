---
import { Icon } from 'astro-icon/components';
import { getTranslations, type Lang } from "../i18n/translations";

interface Props {
  lang?: Lang;
}

const { lang = 'es' } = Astro.props;
const t = getTranslations(lang);

const links = [
    { href: 'https://opinacraft.com', text: 'Opinacraft', icon: 'lucide:external-link' },
    { href: 'https://compos.akawonder.com', text: 'Compos', icon: 'lucide:external-link' },
    { href: lang === 'es' ? '/blog' : '/en/blog', text: t.links.blog, icon: 'lucide:book-open', target: '_self' },
];
---

<section class="w-full my-8 flex">
    <ul class="flex flex-col gap-4">
        {links.map((link, index) => (
            <li class="animate-in" style={`animation-delay: ${240 + index * 80}ms`}>
                <a href={link.href} target={link.target || "_blank"} rel="noopener noreferrer">
                    {link.text}
                    <Icon name={link.icon} />
                </a>
            </li>
        ))}
    </ul>
</section>

<style>
    a {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
</style>
