---
import { getTranslations, type Lang } from "../i18n/translations";

interface Props {
  lang?: Lang;
}

const { lang = 'es' } = Astro.props;
const t = getTranslations(lang);
---

<div class="w-full">
	<h1 class="text-xl font-bold animate-in delay-0">{t.header.name}</h1>
	<details class="w-full animate-in delay-1">
		<summary class="cursor-pointer">{t.header.about}</summary>
		<p class="mt-2">
			{t.header.aboutText}
		</p>
	</details>
</div>
