---
import { Icon } from 'astro-icon/components';
import { getTranslations, type Lang } from "../i18n/translations";

interface Props {
  lang?: Lang;
}

const { lang = 'es' } = Astro.props;
const t = getTranslations(lang);

const socialLinks = [
  { href: 'https://linkedin.com/in/carlos-ferreras', icon: 'simple-icons:linkedin', label: 'LinkedIn' },
  { href: 'https://github.com/cferreras', icon: 'simple-icons:github', label: 'GitHub' },
];
---

<div class="w-full">
	<div class="flex items-start justify-between gap-8">
		<h1 class="text-2xl font-medium animate-in delay-0">{t.header.name}</h1>
		<div class="flex gap-4 animate-in delay-1 pt-1">
			{socialLinks.map((link) => (
				<a 
					href={link.href} 
					target="_blank" 
					rel="noopener noreferrer"
					aria-label={link.label}
					class="social-link"
				>
					<Icon name={link.icon} class="w-[18px] h-[18px]" />
				</a>
			))}
		</div>
	</div>
	<details class="w-full mt-6 animate-in delay-2 group">
		<summary class="cursor-pointer text-sm text-zinc-500 hover:text-zinc-300 transition-colors duration-300 list-none flex items-center gap-2">
			<span class="inline-block transition-transform duration-300 group-open:rotate-90">â†’</span>
			{t.header.about}
		</summary>
		<p class="mt-4 text-zinc-400 leading-relaxed pl-5 border-l border-zinc-800">
			{t.header.aboutText}
		</p>
	</details>
</div>

<style>
	.social-link {
		color: #52525b;
		transition: all 0.3s var(--timing-smooth, cubic-bezier(0.22, 1, 0.36, 1));
		padding: 4px;
		margin: -4px;
	}
	.social-link:hover {
		color: #f5a623;
		transform: translateY(-1px);
	}
</style>
