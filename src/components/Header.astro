---
import { Icon } from 'astro-icon/components';
import { getTranslations, type Lang } from "../i18n/translations";

interface Props {
  lang?: Lang;
}

const { lang = 'es' } = Astro.props;
const t = getTranslations(lang);

const socialLinks = [
  { href: 'https://linkedin.com/in/carlos-ferreras', icon: 'simple-icons:linkedin', label: 'LinkedIn' },
  { href: 'https://github.com/cferreras', icon: 'simple-icons:github', label: 'GitHub' },
];
---

<div class="w-full">
	<div class="flex items-start justify-between">
		<h1 class="text-xl font-bold animate-in delay-0">{t.header.name}</h1>
		<div class="flex gap-3 animate-in delay-1">
			{socialLinks.map((link) => (
				<a 
					href={link.href} 
					target="_blank" 
					rel="noopener noreferrer"
					aria-label={link.label}
					class="social-link"
				>
					<Icon name={link.icon} class="w-5 h-5" />
				</a>
			))}
		</div>
	</div>
	<details class="w-full animate-in delay-2">
		<summary class="cursor-pointer">{t.header.about}</summary>
		<p class="mt-2">
			{t.header.aboutText}
		</p>
	</details>
</div>

<style>
	.social-link {
		color: #a1a1aa;
		transition: color 0.2s ease;
	}
	.social-link:hover {
		color: #ffffff;
	}
</style>
