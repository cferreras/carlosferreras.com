---
import { getTranslations, type Lang } from "../i18n/translations";

interface Props {
  lang?: Lang;
}

const { lang = 'es' } = Astro.props;
const t = getTranslations(lang);
---

<footer class="py-6 px-4 text-center text-sm text-zinc-500">
    {t.footer.text} <a class="text-white hover:text-zinc-300 transition-colors" href="https://github.com/cferreras/carlosferreras.com" target="_blank" rel="noopener noreferrer">GitHub</a>.
</footer>
