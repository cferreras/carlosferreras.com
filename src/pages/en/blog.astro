---
import PostList from "../../components/PostList.astro";
import Layout from "../../layouts/Layout.astro";
import { Icon } from 'astro-icon/components';
import { getTranslations } from "../../i18n/translations";

const t = getTranslations('en');

const seo = {
  title: t.blog.seo.title,
  description: t.blog.seo.description,
  keywords: t.blog.seo.keywords,
};
---

<Layout maxWidth="xl" lang="en" seo={seo}>
    <div class="w-full max-w-xl" transition:name="content">
        <h1 class="text-left text-2xl font-medium mb-1 animate-in delay-0">{t.blog.title}</h1>
        <p class="text-zinc-500 text-sm animate-in delay-1">{t.blog.subtitle}</p>
        <div class="animate-in delay-2">
            <PostList lang="en" />
        </div>
    </div>
    <a class="back-link animate-in delay-3" href="/en/">
        <Icon name="lucide:arrow-left" class="w-4 h-4" />
        <span>{t.blog.back}</span>
    </a>
</Layout>

<style>
    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: #52525b;
        font-size: 0.875rem;
        margin-top: 2rem;
        padding: 8px 0;
        transition: all 0.2s ease;
    }

    .back-link:hover {
        color: #f5a623;
    }

    .back-link:hover :global(svg) {
        transform: translateX(-2px);
    }

    .back-link :global(svg) {
        transition: transform 0.2s ease;
    }
</style>
